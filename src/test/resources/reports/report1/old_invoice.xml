                <cell vtextalign="middle" htextalign="left" fontstyle="bold">Всего к оплате</cell>
                <cell stringformat="%,6.2f" vtextalign="middle" htextalign="right" property="$vatSum"/>
                <cell stringformat="%,6.2f" vtextalign="middle" htextalign="right" property="$sumWithVat"/>
            </table>

            <table paddings="2,2,2,2" widthcellspercentage="0.95,1.31,0.7,1.12" mode="text" font="arial" fontweight="8" columns="4" borderwidth="0" widthpercentage="100" halign="center" spacingafter="20">
